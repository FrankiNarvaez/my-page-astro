---
import Project from "../components/ProjectCard.astro";
import SectionTitle from "../components/SectionTitle.astro";

import { Folder, ArrowRight } from "@lucide/astro";

import finance from '../assets/preview/finance.png'
import eccomerceRails from '../assets/preview/eccomerce-rails.png'
---

<section id="projects">
  <SectionTitle icon={Folder} title="Projects" />
  <div class="flex flex-col md:flex-row justify-between gap-4">
    <Project
        title='Finance'
        image={finance}
        description='Manage your personal finances.'
        technologies={['Rails', 'PostgreSQL']}
        github='https://github.com/FrankiNarvaez/Finance'
        demo='http://finance.jhancarlos.me'
        type="FullStack"
        />
    <Project
        title='Eccomerce'
        image={eccomerceRails}
        description='Eccomerce made with Ruby On Rails, where you can create an acount and up your products, and a litte more.'
        technologies={['Rails', 'PostgreSQL']}
        github='https://github.com/FrankiNarvaez/E-commerce-Rails'
        type="FullStack"
        />
  </div>
  <div class="mt-5 text-center">
    <a
      href="/projects"
      class="inline-flex items-center w-44 mb-8 gap-2 px-4 py-2 rounded-lg 
            bg-white/50 dark:bg-zinc-800/50 
            border border-white/60 dark:border-zinc-700 
            text-gray-600 dark:text-gray-200 
            hover:bg-white dark:hover:bg-zinc-800 
            hover:text-gray-900 dark:hover:text-white 
            transition-all"
    >
      See all projects <ArrowRight size={18} />
    </a>
  </div>
</section>
