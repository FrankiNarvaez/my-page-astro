---
import { Icon } from 'astro-icon/components'

interface Props {
  skill: string;
  color: string;
}

const { skill, color } = Astro.props;
---

<li 
  class="w-20 h-20 flex items-center justify-center rounded-3xl hover:border"
  style={`background-color: ${color}30; border-color: ${color}`}
  title={skill}
>
  <Icon name={skill} size={40}/>
</li>
