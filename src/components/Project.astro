---
import { Icon } from 'astro-icon/components'

interface Props {
  image: string;
	title: string;
  about: string;
  tecnologies: any;
  github: string;
  view: string;
}

const { title, image, tecnologies, github, view, about } = Astro.props;
console.log(title)
console.log(tecnologies)
---



<section class='bg-grey-color/40 project'>
  <img src={image} alt={title} class='rounded-md mb-4' />
  <section>
    <h3 class='text-3xl'>{title}</h3>
    <p class="text-xl">{about}</p>
  </section>
  <section class='flex mt-3 mb-4'>
    {tecnologies?.map((tecnology: string) => (
      <section class='flex gap-3 items-center mr-3 bg-main-color/10 p-2 rounded-3xl'>
        <Icon name={tecnology} size={25}/>
        <p>{tecnology}</p>
      </section>
    ))}
  </section>
  <section class='flex'>
    <section class='flex gap-3 mr-3 bg-main-color/10 p-2 rounded-xl'>
      <Icon name="GitHub" size={25}/>
      <p>GitHub</p>
    </section>
    {view !== '' && (
      <section class='flex gap-3 bg-main-color/10 p-2 rounded-xl'>
        <Icon name="code" size={25}/>
        <p>View</p>
      </section>
    )}
  </section>
</section>

<style>
  .project {
      padding: 20px;
      border-radius: 20px;
      transition: all 0.3s;
      background: rgba(212, 211, 211, 0.241);
      display: flex;
      flex-direction: column;
  }
</style>