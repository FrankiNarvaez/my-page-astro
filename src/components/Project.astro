---
import { Icon } from 'astro-icon/components'

import { Image } from 'astro:assets'

interface Props {
  image: any;
	title: string;
  about: string;
  tecnologies: any;
  github: string;
  view: string;
  type: string;
}

const { title, image, tecnologies, github, view, about, type } = Astro.props;
---
<section class='bg-gray-color/10 hover:bg-opacity-100 p-2 rounded-3xl w-full md:w-96 drop-shadow-md'>
  <div class="absolute backdrop-blur-md bg-slate-600/50 py-1 px-2 rounded-xl text-white m-2 z-20">{type}</div>
  <div class="overflow-hidden rounded-2xl">
    <Image src={image} alt={title} class='object-cover hover:scale-105 hover:brightness-110 transition-all duration-300' draggable='false' />
  </div>
  <section>
    <h3 class='text-2xl text-main-color font-bold my-4'>{title}</h3>
    <p class="text-base mb-2 text-gray-black dark:text-text-white">{about}</p>
  </section>
  <section class='flex flex-wrap'>
    {tecnologies?.map((tecnology: string) => (
    <section class='flex gap-1 mt-3 md:gap-3 items-center mr-3 bg-zinc-400/60 px-2 py-1 rounded-xl'>
        <Icon name={tecnology} size={20} />
        <p class="text-sm text-gray-black dark:text-text-white">{tecnology}</p>
      </section>
    ))}
  </section>
  <section class='flex mt-4'>
    <a href={github} target="_blank" class='flex gap-1 md:gap-3 mr-3 bg-main-color/10 p-2 rounded-xl'>
      <Icon name="GitHub" size={20} class="text-gray-black dark:text-text-white"/>
      <p class="text-sm text-gray-black dark:text-text-white">GitHub</p>
    </a>
    {view !== '' && (
      <a href={view} target="_blank" class='flex gap-1 md:gap-3 bg-main-color/10 p-2 rounded-xl'>
        <Icon name="code" size={20 } class="text-gray-black dark:text-text-white" />
        <p class="text-sm text-gray-black dark:text-text-white">Preview</p>
      </a>
    )}
  </section>
</section>
