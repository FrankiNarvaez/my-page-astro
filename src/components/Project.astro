---
import { Icon } from 'astro-icon/components'

import { Image } from 'astro:assets'

interface Props {
  image: any;
	title: string;
  description: string;
  technologies: string[];
  githubUrl: string;
  liveUrl: string;
  type: string;
  rowReverse?: boolean;
}
const rowReverseClasses='block md:flex md:flex-row-reverse mt-4'

const { title, image, technologies, githubUrl, liveUrl, description, type, rowReverse = false } = Astro.props;
---
<section class={`aspect-auto p-2 border border-gray-200 rounded-3xl bg-white dark:bg-zinc-800 dark:border-zinc-700 shadow-2xl shadow-gray-600/10 dark:shadow-none ${rowReverse ? rowReverseClasses : ''}`}>
  <div class="absolute backdrop-blur-md bg-slate-600/50 py-1 px-2 rounded-xl text-white m-2 z-20">{type}</div>
  <div class="overflow-hidden rounded-2xl">
    <Image src={image} alt={title} class='object-cover hover:scale-105 hover:brightness-110 transition-all duration-300' draggable='false' />
  </div>
  <div class="p-6 space-y-4">
    <div class="flex flex-col space-y-1.5 pb-2">
      <h3 class="text-xl font-semibold leading-none tracking-tight">
        {title}
      </h3>
      <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
        {description}
      </p>
    </div>

    <div>
      <h4 class="text-sm font-medium mb-2 text-gray-900 dark:text-gray-100">Technologies</h4>
      <div class="flex flex-wrap gap-1">
        {technologies.map((tech) => (
          <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 border-transparent bg-gray-100 dark:bg-zinc-700 text-gray-900 dark:text-gray-100 hover:bg-gray-200 dark:hover:bg-gray-700">
            {tech}
          </span>
        ))}
      </div>
    </div>

    <section class='flex mt-4 gap-2 h-8'>
      <a href={githubUrl} target="_blank" class='flex items-center px-2 gap-1 md:gap-3 bg-gray-100 border-gray-300 dark:bg-zinc-800 dark:border-zinc-600 text-gray-black dark:text-white/50 border rounded-3xl hover:bg-gray-800 hover:text-white dark:hover:text-black dark:hover:bg-zinc-100 dark:hover:border-zinc-300'>
        <Icon name="github" size={20} />
        <p class="text-xs">GitHub</p>
      </a>
      {liveUrl !== '' && (
      <a href={liveUrl} target="_blank" class="flex items-center gap-1 md:gap-3 px-2 rounded-3xl bg-gray-100 border-gray-300 dark:bg-zinc-800 dark:border-zinc-600 text-gray-black dark:text-white/50 border hover:bg-gray-800 hover:text-white dark:hover:text-black dark:hover:bg-zinc-100 dark:hover:border-zinc-300">
          <Icon name="Link" size={20 } />
          <p class="text-xs">Preview</p>
        </a>
      )}
    </section>
  </div>
</section>
