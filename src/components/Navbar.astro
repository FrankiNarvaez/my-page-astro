---
import { Icon } from 'astro-icon/components'
---

<header class="backdrop-blur-md fixed w-full z-20 top-0 left-0">
  <nav class="container px-2 lg:max-w-[1114px] flex flex-wrap items-center justify-between mx-auto py-4 ">
    <a class="flex text-main-color gap-2 items-center self-center text-3xl font-black whitespace-nowrap" href="/">
      JC
    </a>
    <div class="md:order-2">
      <ul class="hidden md:flex md:space-x-8 items-center">
        <li>
          <a href="https://www.linkedin.com/in/franki-jhan-carlos-narvaez-munoz-a04bb0319/" target="_blank" aria-label="Visit my LinkedId profile">
            <Icon name='linkedin' size={15} class='text-gray-black hover:scale-110 transition-all duration-300'/>
          </a>
        </li>
        <li>
          <a href="https://github.com/FrankiNarvaez" target="_blank"  aria-label="Visit my Github profile">
            <Icon name='GitHub' size={15} class='text-gray-black hover:scale-110 transition-all duration-300'/>
          </a>
        </li>
        <li>
          <button class="rounded-md" title="Theme switcher button"></button>
        </li>
      </ul>
      <div class="flex items-center">
        <button class="p-1 rounded-md  md:hidden" title="Theme switcher button"></button>
        <button class="p-2 text-sm rounded-lg md:hidden" title="Menu nav">
          <Icon name='menu' size={20} />
        </button>
      </div>
    </div>
    <div class="items-center justify-between w-full md:flex md:w-auto md:order-1 transition-all duration-500 hidden">
      <ul class="flex flex-col gap-10 p-4 md:p-0 mt-4 font-medium  md:flex-row  md:mt-0 md:border-0 text-gray-black">
        <li class="text-center">
          <a href="#Home" class="hover:underline">
            Home
          </a>
        </li>
        <li class="text-center">
          <a href="#Projects" class="hover:underline">
            Projects
          </a>
        </li>
        <li class="text-center">
          <a href="#About" class="hover:underline">
            About me
          </a>
        </li>
        <li class="text-center">
          <a href="#Contact" class="hover:underline">
            Contact
          </a>
        </li>
      </ul>
      <ul class="flex justify-center space-x-8 my-4 md:hidden">
        <li>
          <a href="https://www.linkedin.com/in/franki-jhan-carlos-narvaez-munoz-a04bb0319/" target="_blank">
            <Icon name='linkedin' size={15} class='text-gray-black'/>
          </a>
        </li>
        <li>
          <a href="https://github.com/FrankiNarvaez" target="_blank">
            <Icon name='GitHub' size={15} class='text-gray-black'/>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Button with title menu to open the menu, and logics to open and close the menu
  const menuButton = document.querySelector('button[title="Menu nav"]') as HTMLButtonElement | null;
  // apply hidden to div with class items-center justify-between w-full md:flex md:w-auto md:order-1 transition-all duration-500
  const menuNav = document.querySelector('.items-center.justify-between.w-full.md\\:flex.md\\:w-auto.md\\:order-1.transition-all.duration-500') as HTMLDivElement | null;
  
  if (menuButton && menuNav) {
    menuButton.addEventListener('click', () => {
      menuNav.classList.toggle('hidden');
    });
  }
</script>