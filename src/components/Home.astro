---
import { Image } from 'astro:assets'

import computer from '../assets/pc.png'
---

<section id='Home' class='mt-5 flex mx-[5%] lg:mx-[12%] 2xl:mx-[20%] justify-around md:justify-between items-center flex-col md:flex-row  h-[85vh]'>
  <section class='flex flex-col justify-center font-black'>
    <p class='text-main-color text-xl '>HI! MY NAME IS</p>
    <h1 class='name text-black-color text-[3rem] md:text-[6rem]'></h1>
    <h2 class='text-gray-color text-4xl'>A FULL-STACK DEVELOPER</h2>
  </section>
  <Image src={computer} alt='computer' class='h-auto w-72 sm:w-96'/>
</section>

<style>
  .name:after {
    content: "";
    width: 100%;
    height: 100%;
    line-height: 48px;
    left: 30%;
    top: 50%;
    animation: typingname 2s linear 1;
    animation-fill-mode: forwards;
  }

  @keyframes typingname {
  0% {
    content: "J";
  }
  12% {
    content: "Jh";
  }
  24% {
    content: "Jha";
  }
  36% {
    content: "Jhan";
  }
  48% {
    content: "Jhan C";
  }
  60% {
    content: "Jhan Ca";
  }
  72% {
    content: "Jhan Car";
  }
  84% {
    content: "Jhan Carl";
  }
  96% {
    content: "Jhan Carlo";
  }
  100% {
    content: "Jhan Carlos";
  }
}
</style>