---
interface Props {
  icon: any;
  title: string;
}

const { icon: Icon, title } = Astro.props;
---

<div class="flex items-center gap-3 mb-8">
  <div 
    class="p-2.5 rounded-lg 
           bg-gray-100/80 dark:bg-zinc-800/60 
           backdrop-blur-md 
           border border-gray-200 dark:border-zinc-700 
           text-gray-700 dark:text-gray-200 
           shadow-sm dark:shadow-[0_2px_8px_-2px_rgba(0,0,0,0.4)]"
  >
    <Icon size={20} strokeWidth={1.5} />
  </div>

  <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 tracking-tight">
    {title}
  </h2>
</div>
